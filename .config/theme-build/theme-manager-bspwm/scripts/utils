    #echo "[笨余 Changing theme of network manager dmenu..."
    #sed -i "s_\(~/\.config/polybar/\)[aA-zZ]*\(/scripts/rofi/networkmenu\.rasi\)_\1$PTHEME\2_" $HOME/.config/networkmanager-dmenu/config.ini
#}



